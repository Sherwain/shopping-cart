<%- include('../includes/head') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/products.css">
  </head>
  <body>
    <%- include('../includes/navigation') %>
    <main>
      <form class="product-form" action="/admins/products" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="product[title]" id="title" />
        </div>

        <div class="form-control">
          <label for="imgUrl">Image Url</label>
          <input type="text" name="product[imgUrl]" id="imgUrl" />
        </div>

        <div class="form-control">
          <label for="description">Description</label>
          <textarea  name="product[description]" id="description" row="5"></textarea>
        </div>

        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="product[price]" id="price" step="0.01" />
        </div>

        <button type="submit" class="btn">Add Product</button>
      </form>
    </main>
<%- include('../includes/foot') %>
